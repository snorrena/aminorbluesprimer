<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blankbgportrait"
    tools:context=".VideoPlayerActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum = "5">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minor_music_note_image"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="textView1" />

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="640dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/menubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center" />

</LinearLayout><!-- From: file:/C:/Users/Admin/Dropbox/Development/AndroidStudioProjects/AMinorBluesPrimer/aMinorBluesPrimer/src/main/res/layout/videoplayeractivitytablet.xml -->